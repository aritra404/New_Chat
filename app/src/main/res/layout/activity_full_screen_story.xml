<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Progress Bar Container -->
    <LinearLayout
        android:id="@+id/storyProgressContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
       >

        <ProgressBar
            android:id="@+id/storyProgressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:progressTint="@android:color/white"
            android:progressBackgroundTint="#80FFFFFF" />
    </LinearLayout>

    <!-- Story Image -->
    <ImageView
        android:id="@+id/fullscreen_story_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="Story Image" />

    <!-- Username at the top -->
    <TextView
        android:id="@+id/fullscreen_story_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:text="Username"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:background="@android:color/black"
        android:padding="4dp" />

</RelativeLayout>
